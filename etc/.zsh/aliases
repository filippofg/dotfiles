# Just use zsh built-in "take"...
function mkcd {
  mkdir -p -- "$1" && cd -P -- "$1"
}

# Unix rm + confirmation prompt
function rm { /bin/rm "$@" -i -I; }

# Clear zsh history commands
function zsh-clear-history {
	echo "Really clear zsh history? y/n"
	read response
	if [ "$response" = "y" ]; then
		echo "" > ~/.zsh_history
		echo "Done"
	fi
}

